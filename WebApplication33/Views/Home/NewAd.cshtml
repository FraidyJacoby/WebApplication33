@model NewAdViewModel

<div class="row" style="margin-top:50px;">
    <div class="col-md-6 col-md-offset-3 well">
        <form method="post" action="/home/newad">
            <input type="text" name="title" placeholder="Title" class="form-control" />
            <input type="text" name="phoneNumber" placeholder="Phone Number" class="form-control" />
            <textarea name="description" placeholder="Enter description" rows="5" class="form-control"></textarea>
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <button class="btn btn-outline-success">Submit Ad</button>
        </form>
    </div>
</div>